#define AD9910_PWR 	(54 + 0) //0
//原始IO

#define DROVER 		(54 + 1)
#define DRCTL 		(54 + 2)
#define DRHOLD 		(54 + 3)

#define UP_DAT 		(54 + 6)
#define MAS_REST    (54 + 5)

#define OSK         (54 + 7)
#define PROFILE0    (54 + 8)
#define PROFILE1    (54 + 9)
#define PROFILE2    (54 + 10)

#define RSO			(54 + 11)//RAM-SWP-OVR

#define AD9910_SDO  (54 + 12) 
#define AD9910_SDIO (54 + 13)
#define SCLK        (54 + 14)
#define CS          (54 + 15) //


